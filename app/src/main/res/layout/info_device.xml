<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingStart="@dimen/activity_horizontal_margin"
	android:paddingEnd="@dimen/activity_horizontal_margin"
	tools:ignore="ContentDescription">

	<TableRow
		android:id="@+id/item_device_name"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/ble_device_name_header"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:text="@string/device_info_desc_name"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />

		<TextView
			android:id="@+id/ble_device_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/value_unknown"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />
	</TableRow>

	<TableRow
		android:id="@+id/item_device_address"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/ble_device_address_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/device_info_desc_address"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />

		<TextView
			android:id="@+id/ble_device_address"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/value_unknown"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />

	</TableRow>

	<TableRow
		android:id="@+id/item_device_manufacturer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="visible">

		<TextView
			android:id="@+id/ble_device_manufacturer_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/device_info_desc_make"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />

		<TextView
			android:id="@+id/ble_device_manufacturer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/value_unknown"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />
	</TableRow>

	<TableRow
		android:id="@+id/item_device_model"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="visible">

		<TextView
			android:id="@+id/ble_device_model_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/device_info_desc_model"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />

		<TextView
			android:id="@+id/ble_device_model"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/value_unknown"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />
	</TableRow>

	<TableRow
		android:id="@+id/item_device_version_fw"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/ble_device_version_fw_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/device_info_desc_fw"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />

		<TextView
			android:id="@+id/ble_device_version_fw"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/value_unknown"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />

	</TableRow>

	<TableRow
		android:id="@+id/item_device_version_hw"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="visible">

		<TextView
			android:id="@+id/ble_device_version_hw_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/device_info_desc_hw"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />

		<TextView
			android:id="@+id/ble_device_version_hw"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/value_unknown"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />
	</TableRow>

	<TableRow
		android:id="@+id/item_device_serial"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/ble_device_serial_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/device_info_desc_serial"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />

		<TextView
			android:id="@+id/ble_device_serial"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/value_unknown"
			android:textAlignment="viewStart"
			android:textColor="?android:attr/textColorPrimary" />
	</TableRow>

</TableLayout>